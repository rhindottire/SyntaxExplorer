<!-- .container.mt-3>.row>.col-md-8 -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact Details</h2>
      <% if (!contacts) { %>
        <div class="alert alert-danger" role="alert">
          Contact "<%= name %>" not found! <br>
          <a href="/contact" class="alert-link">&laquo; Back</a>
        </div>
      <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contacts.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contacts.phone %></h6>
          <p class="card-text"><%= contacts.email %></p>
          <a href="/contact" class="card-link">&laquo; Back</a>
          <a href="/contact/delete/<%= contacts.name %>"
              class="btn btn-danger badge"
              onclick="return confirm('Are you sure you want to delete <%= contacts.name %> ?')"
            >Delete
          </a>
          <a href="/contact/edit/<%= contacts.name %>"
            class="btn btn-warning badge"
            >Edit
          </a>
          <!-- &laquo; is the HTML entity for the left-pointing double angle quotation mark -->
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>