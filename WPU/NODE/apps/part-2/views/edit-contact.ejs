<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Contact</h2>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <form method="post" action="/contact/update">
        <input type="hidden"
                name="oldName"
                value="<%= contact.oldName || contact.name %>">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  value="<%= contact.name %>"
                  required>
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  value="<%= contact.phone %>"
                  required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  value="<%= contact.email ? contact.email : '' %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>